<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bquiet.bquiet.fragments.AboutRobonautasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.bquiet.bquiet.fragments.AboutRobonautasFragment"
            tools:layout="@layout/fragment_about_robonautas"
            android:layout_weight="1"/>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.bquiet.bquiet.fragments.AboutBQuietFragment"
            tools:layout="@layout/fragment_about_bquiet"
            android:layout_weight="2"/>
    </LinearLayout>

</FrameLayout>
