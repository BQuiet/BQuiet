<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/cardview_class"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/colorClickNumberPickerText"
    android:elevation="15dp">
    <TextView
        android:id="@+id/cardview_class_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextCardView"
        android:textStyle="bold"
        android:textSize="@dimen/cardview_class_text_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/cardview_class_text_margin"/>
</android.support.v7.widget.CardView>


</LinearLayout>