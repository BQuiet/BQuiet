<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    tools:context="com.bquiet.bquiet.activities.MainActivity">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.anastr.speedviewlib.SpeedView
                android:layout_margin="20dp"
                android:id="@+id/speedView"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                app:maxSpeed="100"
                app:minSpeed="0"
                app:speedTextFormat="INTEGER"
                app:unit="dB"
                app:speedTextPosition="BOTTOM_CENTER"/>

            <!--<com.github.anastr.speedviewlib.AwesomeSpeedometer
                android:id="@+id/awesomeSpeedometer"
                android:layout_width="300dp"
                android:layout_height="wrap_content" />-->

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageButton
            android:id="@+id/activity_main_play_button"
            android:background="@drawable/button_play"
            android:layout_width="@dimen/button_play_pause_size"
            android:layout_height="@dimen/button_play_pause_size"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/activity_main_pause_button"/>

        <ImageButton
            android:id="@+id/activity_main_pause_button"
            android:background="@drawable/button_pause"
            android:layout_width="@dimen/button_play_pause_size"
            android:layout_height="@dimen/button_play_pause_size"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>



</LinearLayout>
